<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="292dp"
        android:layout_height="242dp"
        android:layout_marginStart="56dp"
        android:onClick="Pessoa3"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/igreja_sao_jose1" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="294dp"
        android:layout_height="201dp"
        android:editable="false"
        android:text="A Igreja São José, localizada no centro de Belo Horizonte, é um dos mais importantes patrimônios da fé, história e cultura do povo mineiro. É um dos mais notáveis monumentos construídos em Belo Horizonte. Com mais de cento e vinte anos, é um lugar privilegiado de cultura, religiosidade, manifestações e encontros na cidade de Belo Horizonte. O interior da igreja possui iluminação aconchegante, devido aos belissimos vitrais impecáveis com cores fortes e vibrantes .      "
        android:textAlignment="textStart"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <Button
        android:id="@+id/btnVoltar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Retornar"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLigar3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/btnLigar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Ir"
        android:text="Ir Para"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnVoltar3"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="338dp"
        android:layout_height="55dp"
        android:editable="false"
        android:text="Igreja São José"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>